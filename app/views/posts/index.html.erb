<p style="color: green"><%= notice %></p>

<h1>連絡事項一覧</h1>

<%= render 'search_form', q: @q, url: posts_path %>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post %>
    </p>
    <hr style="border: none; height: 1px; background-color: #ccc;"> <!-- 仮置き -->
  <% end %>
</div>

<%= link_to "New post", new_post_path %>

<%= form_with url: destroy_user_session_path, method: :delete do |form| %>
  <%= form.submit "Logout" %>
<% end %>