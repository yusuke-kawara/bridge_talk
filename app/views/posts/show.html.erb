<p style="color: green"><%= notice %></p>

<%= render @post %>



<div>
  <% if user_signed_in? && current_user.id == @post.user_id %>
    <%= link_to 'Edit', edit_post_path(@post) %> |
    <%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %>
    <br>
  <% end %>
  
  <%= link_to "Back to posts", posts_path %>
</div>