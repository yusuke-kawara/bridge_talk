<%= search_form_for q, url: url, class: "space-y-4" do |f| %>
  <div class="flex flex-col space-y-2 md:flex-row md:space-y-0 md:space-x-2">
    <%= f.search_field :title_or_content_cont, 
        class: 'form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50',
        placeholder: t('search_form.title_and_content_search') %>
    <%= f.search_field :user_name_cont, 
        class: 'form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50',
        placeholder: t('search_form.user_search') %>
  </div>
  <div class="flex justify-center md:justify-start">
    <%= f.submit t('search_form.search'), 
        class: 'px-4 py-2 rounded-md bg-blue-500 text-white font-semibold hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-opacity-50' %>
  </div>
<% end %>